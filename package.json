{
	"name": "translator",
	"displayName": "translator",
	"description": "划词翻译，百度翻译作为翻译工具",
	"publisher": "Ninja",
	"version": "0.0.1",
	"icon": "icon.png",
	"license": "MIT",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.translator"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.translator",
				"title": "translator"
			}
		],
		"configuration": {
			"title": "翻译配置",
			"properties": {
				"translator.showTip": {
					"type": "boolean",
					"default": true
				},
				"translator.fromLanguage": {
					"type": "string",
					"default": "en",
					"description": "from language"
				},
				"translator.targetLanguage": {
					"type": "string",
					"default": "zh",
					"description": "target language"
				}
			}
		},
		"keybindings": [
			{
				"command": "extension.translator",
				"key": "ctrl+f10",
				"mac": "cmd+f10",
				"when": "editorTextFocus"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorFocus",
					"command": "extension.translator",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack --config ./build/node-extension.webpack.config.js",
		"watch": "webpack --watch --config ./build/node-extension.webpack.config.js",
		"package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/google-translate-api": "^2.3.1",
		"@types/humps": "^2.0.0",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/request": "^2.48.5",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"google-translate-cn-api": "^1.0.6",
		"mocha": "^8.1.3",
		"ts-loader": "^8.0.11",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1",
		"webpack": "^5.10.0",
		"webpack-cli": "^4.2.0"
	},
	"dependencies": {
		"baidu-translate-api": "^0.4.3",
		"humps": "^2.0.1"
	}
}
